<!doctype html>

<html>
	<head>
		<title>Activity</title>
		<link href="css/PocketPup.css" rel="stylesheet">
		<link href="css/bootstrap.css" rel="stylesheet">
		<link href="css/bootstrap-theme.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" >
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

	<body>


		<div class="bar top">
			<a href="activity" id="actButton" class="active top"><i class="fa fa-bar-chart"></i></a>
			<p class="pageTitle">Activity</p>
		</div>

		<div class="buffer"></div>

		<div class="section">
			<div class="activitySection">
				<div class="dailyGoals">
					<h1 class="goalHeader">Daily Goals</h1>
						<h3>Feed</h3>
						<progress class="progress" value={{dailyFeeding}} max="2"></progress> 
						<h3>Clean-up After</h3>
						<progress class="progress" value={{dailyCleanUp}} max="4"></progress>
						<h3>Outside</h3>
						<progress class="progress" value={{dailyOutsideTime}} max="120"></progress>
						<h3>Social Time</h3>
						<progress class="progress" value={{dailySocialTime}} max="30"></progress>
				</div>

				<div class="weeklyGoals">
					<h1 class="goalHeader">Weekly Goals</h1>
						<h3>Feed</h3>
						<progress class="progress" value={{weeklyFeeding}} max="14"></progress>
						<h3>Clean-up After</h3>
						<progress class="progress" value={{weeklyCleanUp}} max="28"></progress>
						<h3>Outside</h3>
						<progress class="progress" value={{weeklyOutsideTime}} max="840"></progress>
						<h3>Social Time</h3>
						<progress class="progress" value={{weeklySocialTime}} max="210"></progress>
				</div>
			</div>
		</div>

	<div class="buffer"></div>

		<div class="bar bottom">
		  <a href="home"><i class="fa fa-home"></i></a> 
		  <a href="locations"><i class="fa fa-map-marker"></i></a> 
		  <a href="training"><i class="fa fa-paw"></i></a> 
			<a href="vote"><i class="fa fa-check-square-o"></i></a>
		</div>
	</body>
