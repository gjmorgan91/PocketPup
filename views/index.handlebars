	<body>

		<div class="bar top">
			<a href="activity" id="actButton"><i class="fa fa-bar-chart"></i></a>
			<p class="pageTitle">PocketPup</p>
			<a href="store" class="bones" id="storeButton">{{cashmonkey}} <i class="fa fa-credit-card"></i></a>
		</div>

		<div class="content">
			<img class="background" id="background" src="{{background}}"></img>
			<img class="background inside {{painting}}" id="painting" src="images/items/inside/painting.png"></img>
			<img class="background inside {{shelfDecos}}"  id="shelfDeco" src="images/items/inside/shelfDeco.png"></img>
			<img class="background inside {{tv}}" id="tv" src="images/items/inside/tv.png"></img>
			<img class="background inside {{backpack}}" id="backpack" src="images/items/inside/backpack.png"></img>
			<img class="background inside {{mystery}}" id="mystery" src="images/items/inside/mystery.png"></img>
			<img class="background outside {{alcohol}}" id="alcohol" src="images/items/outside/alcohol.png"></img>
			<img class="background outside {{flowers}}" id="flowers" src="images/items/outside/flowers.png"></img>
			<img class="background outside {{orangepot}}" id="orangepot" src="images/items/outside/orangepot.png"></img>
			<img class="background outside {{rug}}" id="rug" src="images/items/outside/rug.png"></img>
			<img class="background outside {{stump}}" id="stump" src="images/items/outside/stump.png"></img>
			<img class="inside {{poop}}" id="poop" src="images/items/inside/poop.png" onClick="myFunction3()"></img>
			<img class="background outside {{yellowPot}}" id="yellowPot" src="images/items/outside/yellowPot.png"></img>
			<a href="profile" class="dog" id="currDog"><img id="dogImg" src="{{avatar}}"></i></a>
			<div id="bowlIndoors">
				<img class="bowl1" id="bowlEmpty1" onclick="updateFood()" src="{{bowl_empty}}"></img>
				<img class="bowl1" id="bowlFull1" onclick="updateFood()" src="{{bowl_full}}"></img>
			</div>
			<div id="bowlOutdoors">
				<img class="bowl2" id="bowlEmpty2" onclick="updateFood()" src="{{bowl_empty}}"></img>
				<img class="bowl2" id="bowlFull2" onclick="updateFood()" src="{{bowl_full}}"></img>
			</div>

			<div class="popup1" onclick="myFunction1()">
  				<span class="popuptext1" id="myPopup1">Based on your dog's age and weight, you should feed it 2 cups twice a day!</span>
			</div>
			<div class="popup2" onclick="myFunction2()">
  				<span class="popuptext2" id="myPopup2">Based on your dog's age and weight, you should feed it 2 cups twice a day!</span>
			</div>
			<div class="popup3" onclick="myFunction3()">
  				<span class="popuptext3" id="myPopup3">Make sure to take your pup out enough to potty!</span>
			</div>

			<p class="btn" id="outside" onClick="BGChange()">Go outside >></p>
			<p class="btn" id="inside" onClick="BGChangeBack()"><< Go inside</p>
		</div>

		<div class="bar bottom">
		  <a class="active bottom"><i class="fa fa-home"></i></a> 
		  <a href="locations"><i class="fa fa-map-marker"></i></a> 
		  <a href="training"><i class="fa fa-paw"></i></a> 
		  <a href="vote"><i class="fa fa-check-square-o"></i></a>
		</div>
