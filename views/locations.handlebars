<!doctype html>

<html>


	<head>
		<title>Locations</title>
		<link href="/css/PocketPup.css" rel="stylesheet">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" >

		<script src="/js/jquery.js"></script>
		<script src="/js/bootstrap.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>

<script> $(document).ready(function() {
	$.post("/locations/poop")}) 
</script>

	<body>

		<div class="bar top">
			<a href="activity" id="actButton"><i class="fa fa-bar-chart"></i></a>
			<p class="pageTitle">Locations</p>
		</div>

		<div class="buffer"></div>

		<div class="section">
			{{#each locations}}
			<div class="locationsNode">
				<div class="locHeading">
					<p id="locName">{{locName}}</p>
					<p id="locRating">{{locRating}} stars</p>
				</div>
				<div id="map">
					<iframe src="{{locURL}}" width="100%" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
				</div>
			</div>
			{{/each}}
		</div>

		<div class="buffer"></div>

		<div class="bar bottom">
		  <a href="home"><i class="fa fa-home"></i></a> 
		  <a class="active bottom" href="locations"><i class="fa fa-map-marker"></i></a> 
		  <a href="training"><i class="fa fa-paw"></i></a> 
		  <a href="vote"><i class="fa fa-check-square-o"></i></a>
		</div>
	</body>
